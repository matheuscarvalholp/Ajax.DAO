@model IEnumerable<TesteEmpresa.Models.Produto>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<script src="~/Scripts/jquery-3.3.1.js"></script>
<table id="tabela" class="table">
    @*o table é a minha tabela*@
    <tr>
        @*tr é minha linha*@
        <th>
            @*th é cada coluna*@
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantidade)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Valor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Data)
        </th>
        <th></th>
    </tr>
    <tr>
        <th><input type="text" id="txtColuna1" /></th>
        <th><input type="text" id="txtColuna2" /></th>
        <th><input type="text" id="txtColuna3" /></th>
        <th><input type="text" id="txtColuna4" /></th>
    </tr>

    @foreach (var item in Model)
    {@*foreach para cada linha ele vai isolar*@ @*o @foreach é para ler minha lista  a lista esta no controller*@
    <tr>
        <td>
            @*td é o conteudo da minha coluna*@
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantidade)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Valor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Data)
        </td>
        <td>
            @Html.ActionLink("Editar", "EditarProduto", new { id = item.Id }, new { @class = "btn btn-primary btn-warning"}) ||
            @Html.ActionLink("Delete", "DeletarProduto", new { id = item.Id }, new{ @class = "btn btn-primary btn-danger"}) ||
            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-primary btn-default"})
        </td>
    </tr>
}

</table>
<script src="~/Scripts/Filtros.js"></script>